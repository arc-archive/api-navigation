{
  "name": "@api-components/api-navigation",
  "description": "An element to display the response body",
  "version": "4.3.3",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "api",
    "navigation"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Leandro Bauret",
    "Francisco Di Giandomenico"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/api-navigation.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/api-navigation/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/icons": "^4.0.2",
    "@anypoint-web-components/anypoint-button": "^1.2.3",
    "@anypoint-web-components/anypoint-collapse": "^0.1.0",
    "@api-components/amf-helper-mixin": "^4.5.31",
    "@api-components/http-method-label": "^3.1.5",
    "@api-components/raml-aware": "^3.0.0",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^2.2.5",
    "@anypoint-web-components/anypoint-checkbox": "^1.2.2",
    "@anypoint-web-components/anypoint-dropdown-menu": "^0.1.20",
    "@anypoint-web-components/anypoint-item": "^1.0.5",
    "@anypoint-web-components/anypoint-listbox": "^1.1.6",
    "@api-components/api-model-generator": "^0.2.14",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@open-wc/eslint-config": "^4.0.1",
    "@open-wc/testing": "^2.5.32",
    "@polymer/iron-test-helpers": "^3.0.0",
    "@web/dev-server": "^0.1.8",
    "@web/test-runner": "^0.13.15",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.2",
    "sinon": "^11.1.2",
    "typescript": "^4.4.3",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "npx web-dev-server --app-index demo/index.html --node-resolve --open --watch --root-dir .",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "npx web-test-runner test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit",
    "test:watch": "npx web-test-runner test/**/*.test.js --node-resolve --watch --playwright --browsers chromium",
    "gen:wc": "npx wca analyze \"*.js\" --outFile custom-elements.json",
    "prepare": "node demo/model.js"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "overrides": {
    "playwright": "1.25.2"
  }
}
